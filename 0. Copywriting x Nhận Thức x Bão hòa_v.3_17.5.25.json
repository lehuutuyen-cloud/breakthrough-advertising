      schwartzTechniques: ['8. Đồng Nhất Hóa', '13. Ngụy trang', '14. Động lực (Momentum)'],
      position: 'Vị trí trong bài quảng cáo: Câu chuyện được kể ngay từ đầu, tạo "Chú ý" (Attention) và "Sự quan tâm" (Interest) bằng cách chạm vào cảm xúc và sự đồng cảm. Nó dẫn dắt độc giả qua một hành trình cảm xúc trước khi dần hé lộ vấn đề và giải pháp.'
    }
  ]
};

function App() {
  const [selectedCongThuc, setSelectedCongThuc] = useState(data.congThucCopywriting[0]);
  const [selectedGiaiDoan, setSelectedGiaiDoan] = useState(data.giaiDoanNhanThuc[0]);
  const [selectedGiaiDoanBaoHoa, setSelectedGiaiDoanBaoHoa] = useState(data.giaiDoanBaoHoa[0]);

  // New state for selected Great Lead to display details
  const [selectedGreatLead, setSelectedGreatLead] = useState(null);

  const handleSelectCongThuc = (congThucId) => {
    const congThuc = data.congThucCopywriting.find(ct => ct.id === congThucId);
    setSelectedCongThuc(congThuc);
    if (congThuc.id === '4C') {
        setSelectedGiaiDoan(data.giaiDoanNhanThuc.find(gd => gd.id === 'tat_ca_giai_doan'));
        setSelectedGiaiDoanBaoHoa(data.giaiDoanBaoHoa.find(gdbh => gdbh.id === 'bao_hoa_tat_ca'));
    } else {
        setSelectedGiaiDoan(data.giaiDoanNhanThuc[0]); // Reset to first if not 4C
        setSelectedGiaiDoanBaoHoa(data.giaiDoanBaoHoa[0]); // Reset to first if not 4C
    }
    setSelectedGreatLead(null); // Reset selected great lead
  };

  const handleSelectGiaiDoan = (giaiDoanId) => {
    setSelectedGiaiDoan(data.giaiDoanNhanThuc.find(gd => gd.id === giaiDoanId));
    setSelectedGreatLead(null); // Reset selected great lead
  };

  const handleSelectGiaiDoanBaoHoa = (giaiDoanBaoHoaId) => {
    setSelectedGiaiDoanBaoHoa(data.giaiDoanBaoHoa.find(gdbh => gdbh.id === giaiDoanBaoHoaId));
    setSelectedGreatLead(null); // Reset selected great lead
  };

  const handleSelectGreatLead = (leadId) => {
    const lead = data.greatLeads.find(l => l.id === leadId);
    setSelectedGreatLead(lead);
  };

  const suitabilityText = selectedCongThuc.phuHop[selectedGiaiDoan.id];

  // Filter great leads based on selected awareness stage and, for 4C, show all leads.
  const applicableGreatLeads = data.greatLeads.filter(lead => {
    if (selectedCongThuc.id === '4C') {
        return true; // All great leads are applicable for 4C (general quality criteria)
    }
    // If "Tất cả các giai đoạn" is selected for awareness, show leads applicable to any specific stage
    if (selectedGiaiDoan.id === 'tat_ca_giai_doan') {
      return lead.applicability.some(stageId =>
        stageId.startsWith('giai_doan_') && stageId !== 'tat_ca_giai_doan'
      );
    }
    // Otherwise, filter by the specific selected awareness stage
    return lead.applicability.includes(selectedGiaiDoan.id);
  });

  return (
    <div className="p-6 bg-gray-50 min-h-screen font-inter">
      <h1 className="text-4xl font-bold text-center text-red-600 mb-8 rounded-lg p-4 bg-white shadow-xl">
        Công Thức Copywriting x Giai Đoạn Nhận Thức
      </h1>
      <p className="text-center text-gray-700 mb-12">
        Khám phá mối liên hệ giữa các công thức copywriting và giai đoạn nhận thức của khách hàng, cùng với ứng dụng các kỹ thuật viết quảng cáo chuyển đổi cao của Lê Hữu Tuyến.
      </p>

      <div className="flex flex-col lg:flex-row gap-8">
        {/* Cột 1: Công Thức Copywriting */}
        <div className="flex-1 bg-white p-6 rounded-lg shadow-md border border-blue-200">
          <h2 className="text-2xl font-semibold text-blue-700 mb-4 pb-2 border-b border-blue-300">1. Công Thức Copywriting</h2>
          <div className="space-y-2">
            {data.congThucCopywriting.map((ct) => (
              <button
                key={ct.id}
                onClick={() => handleSelectCongThuc(ct.id)}
                className={`w-full text-left px-4 py-2 rounded-md transition-all duration-200
                  ${selectedCongThuc.id === ct.id
                    ? 'bg-blue-600 text-white shadow-lg transform scale-105'
                    : 'bg-blue-100 text-blue-800 hover:bg-blue-200 hover:shadow-md'
                  }`}
              >
                {ct.name}
              </button>
            ))}
          </div>
          <div className="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-md text-gray-700">
            <h3 className="font-semibold text-blue-700">Mô tả:</h3>
            <p>{selectedCongThuc.description}</p>
          </div>
        </div>

        {/* Cột 2: Giai Đoạn Nhận Thức Khách Hàng */}
        <div className="flex-1 bg-white p-6 rounded-lg shadow-md border border-green-200">
          <h2 className="text-2xl font-semibold text-green-700 mb-4 pb-2 border-b border-green-300">2. Giai Đoạn Nhận Thức Khách Hàng</h2>
          <div className="space-y-2">
            {data.giaiDoanNhanThuc.map((gd) => (
                <button
                    key={gd.id}
                    onClick={() => handleSelectGiaiDoan(gd.id)}
                    disabled={selectedCongThuc.id === '4C' && gd.id !== 'tat_ca_giai_doan'}
                    className={`w-full text-left px-4 py-2 rounded-md transition-all duration-200
                        ${selectedGiaiDoan.id === gd.id
                            ? 'bg-green-600 text-white shadow-lg transform scale-105'
                            : 'bg-green-100 text-green-800 hover:bg-green-200 hover:shadow-md'
                        }
                        ${selectedCongThuc.id === '4C' && gd.id !== 'tat_ca_giai_doan' ? 'opacity-50 cursor-not-allowed' : ''}
                    `}
                >
                    {gd.name}
                </button>
            ))}
          </div>
          <div className="mt-6 p-4 bg-green-50 border border-green-200 rounded-md text-gray-700">
            <h3 className="font-semibold text-green-700">Mô tả:</h3>
            <p>{selectedGiaiDoan.description}</p>
          </div>
        </div>

        {/* Cột 3: Giai Đoạn Bão Hòa Thị Trường */}
        <div className="flex-1 bg-white p-6 rounded-lg shadow-md border border-orange-200">
          <h2 className="text-2xl font-semibold text-orange-700 mb-4 pb-2 border-b border-orange-300">3. Giai Đoạn Bão Hòa Thị Trường</h2>
          <div className="space-y-2">
            {data.giaiDoanBaoHoa.map((gdbh) => (
              <button
                key={gdbh.id}
                onClick={() => handleSelectGiaiDoanBaoHoa(gdbh.id)}
                disabled={selectedCongThuc.id === '4C' && gdbh.id !== 'bao_hoa_tat_ca'}
                className={`w-full text-left px-4 py-2 rounded-md transition-all duration-200
                  ${selectedGiaiDoanBaoHoa.id === gdbh.id
                    ? 'bg-orange-600 text-white shadow-lg transform scale-105'
                    : 'bg-orange-100 text-orange-800 hover:bg-orange-200 hover:shadow-md'
                  }
                  ${selectedCongThuc.id === '4C' && gdbh.id !== 'bao_hoa_tat_ca' ? 'opacity-50 cursor-not-allowed' : ''}
                `}
              >
                {gdbh.name}
              </button>
            ))}
          </div>
          <div className="mt-6 p-4 bg-orange-50 border border-orange-200 rounded-md text-gray-700">
            <h3 className="font-semibold text-orange-700">Mô tả:</h3>
            <p>{selectedGiaiDoanBaoHoa.description}</p>
          </div>
        </div>

        {/* Cột 4: Ứng Dụng Chi Tiết */}
        <div className="flex-1 bg-white p-6 rounded-lg shadow-md border border-purple-200">
          <h2 className="text-2xl font-semibold text-purple-700 mb-4 pb-2 border-b border-purple-300">4. Ứng Dụng Chi Tiết</h2>
          <div className="space-y-4">
            <div className="p-4 bg-purple-50 border border-purple-200 rounded-md">
              <h3 className="font-semibold text-purple-700 mb-2">Công thức: {selectedCongThuc.name}</h3>
              <p className="text-gray-700">Giai đoạn nhận thức: {selectedGiaiDoan.name}</p>
              <p className="text-gray-700">Giai đoạn bão hòa: {selectedGiaiDoanBaoHoa.name}</p>
            </div>

            <div className="p-4 bg-yellow-50 border border-yellow-200 rounded-md">
              <h3 className="font-semibold text-yellow-700 mb-2">Mức độ phù hợp (Dựa trên Giai đoạn nhận thức):</h3>
              <p className={`font-bold ${suitabilityText.includes('Rất lý tưởng') ? 'text-green-600' : suitabilityText.includes('Lý tưởng') ? 'text-blue-600' : suitabilityText.includes('Không') ? 'text-red-600' : 'text-orange-600'}`}>
                {suitabilityText}
              </p>
              {suitabilityText && <p className="text-gray-700 text-sm italic">{selectedCongThuc.description}</p>}
              <p className="text-gray-600 text-xs italic mt-2">
                Lưu ý: Mức độ phù hợp tổng thể còn phụ thuộc vào sự kết hợp giữa Giai đoạn nhận thức và Giai đoạn bão hòa. Hãy liên hệ với Lê Hữu Tuyến để nhận tài liệu chi tiết về khóa Copywriting Bootcamp.
              </p>
            </div>

            {/* Hiển thị các kiểu mở bài phù hợp */}
            {applicableGreatLeads.length > 0 && (
                <div className="p-4 bg-teal-50 border border-teal-200 rounded-md">
                    <h3 className="font-semibold text-teal-700 mb-2">Các kiểu Mở bài phù hợp:</h3>
                    <div className="flex flex-wrap gap-2 mb-4">
                        {applicableGreatLeads.map((lead) => (
                            <button
                                key={lead.id}
                                onClick={() => handleSelectGreatLead(lead.id)}
                                className={`px-4 py-2 rounded-md transition-all duration-200
                                    ${selectedGreatLead && selectedGreatLead.id === lead.id
                                        ? 'bg-teal-600 text-white shadow-lg transform scale-105'
                                        : 'bg-teal-100 text-teal-800 hover:bg-teal-200 hover:shadow-md'
                                    }`}
                            >
                                {lead.name}
                            </button>
                        ))}
                    </div>

                    {selectedGreatLead && (
                        <div className="bg-white p-4 rounded-md shadow-inner border border-gray-200">
                            <h4 className="text-xl font-bold text-teal-800 mb-2">{selectedGreatLead.name}</h4>
                            <p className="text-sm text-gray-700 mb-2 italic">Ví dụ tiêu đề: "{selectedGreatLead.exampleDetails.original.split(': ')[1] || selectedGreatLead.exampleDetails.original}"</p>

                            <div className="space-y-3 text-gray-700">
                                {/* Only display requested fields */}
                                <div>
                                    <h5 className="font-semibold text-blue-700">Ví dụ minh họa</h5>
                                    <p>{selectedGreatLead.exampleDetails.original}</p>
                                    {selectedGreatLead.exampleDetails.suggested && <p>{selectedGreatLead.exampleDetails.suggested}</p>}
                                    <p>{selectedGreatLead.exampleDetails.details}</p>
                                </div>
                                <div>
                                    <h5 className="font-semibold text-blue-700">Gợi ý áp dụng:</h5>
                                    <p>{selectedGreatLead.applicationGuidance.purpose}</p>
                                    <p>
                                        <span className="font-semibold">Giai đoạn bão hòa ({selectedGiaiDoanBaoHoa.name}):</span> {selectedGreatLead.applicationGuidance.marketSaturation[selectedGiaiDoanBaoHoa.id]}
                                    </p>
                                    {selectedGreatLead.applicationGuidance.notes && <p>{selectedGreatLead.applicationGuidance.notes}</p>}
                                </div>
                                <div>
                                    <h5 className="font-semibold text-blue-700">Vị trí trong bài quảng cáo:</h5>
                                    <p>{selectedGreatLead.position}</p>
                                </div>
                                {selectedGreatLead.schwartzTechniques && selectedGreatLead.schwartzTechniques.length > 0 && (
                                    <div>
                                        <h5 className="font-semibold text-purple-600">Kỹ thuật Copywriting liên quan:</h5>
                                        <p className="text-sm">{selectedGreatLead.schwartzTechniques.join(', ')}</p>
                                    </div>
                                )}
                            </div>
                        </div>
                    )}
                </div>
            )}

            <div className="p-4 bg-red-50 border border-red-200 rounded-md">
              <h3 className="font-semibold text-red-700 mb-2">Các kỹ thuật Copywriting Bootcamp phù hợp cho Công thức đã chọn:</h3>
              <ul className="list-disc list-inside text-gray-700 space-y-1">
                {selectedCongThuc.kyThuat.map((kt, index) => (
                  <li key={index}>
                    <span className="font-medium">{kt.name}:</span> {kt.desc}
                  </li>
                ))}
              </ul>
              <p className="text-gray-600 text-xs italic mt-2">
                Các kỹ thuật này cần được áp dụng linh hoạt tùy theo Giai đoạn bão hòa: ví dụ, ở thị trường mới (Giai đoạn Bão hòa 1), các kỹ thuật đơn giản và trực tiếp hiệu quả; ở thị trường "mất niềm tin" (Giai đoạn Bão hòa 5), các kỹ thuật dựa trên "Đồng nhất hóa" và "Ngụy trang" sẽ quan trọng hơn.
              </p>
            </div>
          </div>
        </div>
      </div>

      <div className="mt-12 p-6 bg-white rounded-lg shadow-md border border-gray-200">
        <h2 className="text-2xl font-semibold text-gray-700 mb-4 pb-2 border-b border-gray-300">5. Kiến Thức Copywriting Cụ Thể Từ Chương 6-14</h2>
        <p className="text-gray-700 mb-4">
          Dưới đây là gợi ý các kỹ thuật viết copywriting cụ thể mà bạn có thể áp dụng dựa trên công thức và giai đoạn đã chọn. Hãy tham khảo tài liệu "Kỹ thuật viết bán mà như không bán của Lê Hữu Tuyến" biết thêm chi tiết và ví dụ. Hoặc truy cập www.lehuutuyen.com.
        </p>
        <ul className="list-disc list-inside text-gray-700 space-y-2">
          {selectedCongThuc.kyThuat.map((kt, index) => (
            <li key={index} className="font-medium text-blue-700">
              {kt.name}: <span className="text-gray-800">{kt.desc}</span>
            </li>
          ))}
          {selectedCongThuc.id === '4C' && (
            <>
                <li className="font-medium text-blue-700">4. 'Ngôn từ hóa' (38 Cách Tăng sức mạnh cho Tiêu đề): <span className="text-gray-800">Kỹ thuật tăng cường sức mạnh cho tiêu đề bằng cách thể hiện nó, thêm hình ảnh thông qua cấu trúc câu để khuếch đại, định lượng hoặc làm sống động lời hứa.</span></li>
                <li className="font-medium text-blue-700">14. Xác minh (Verification): <span className="text-gray-800">Đưa ra bằng chứng và thẩm quyền (số liệu thống kê, bài kiểm định, nhận xét từ khách hàng, lời xác nhận từ chuyên gia) để tăng độ tin cậy.</span></li>
                <li className="font-medium text-blue-700">14. Đan xen (Interweaving): <span className="text-gray-800">Kết hợp lời hứa, lý lẽ, cảm xúc và hình ảnh vào với nhau, nén chặt chúng vào từng câu văn để tạo ra mạch thuyết phục không thể cưỡng lại.</span></li>
            </>
          )}
          {selectedCongThuc.id === '4U' && (
            <>
                <li className="font-medium text-blue-700">4. 'Ngôn từ hóa' (38 Cách Tăng sức mạnh cho Tiêu đề): <span className="text-gray-800">Làm cho thông điệp rõ ràng, súc tích và mạnh mẽ hơn.</span></li>
            </>
          )}
           {selectedCongThuc.id === '5_Basic_Objections' && (
            <>
                <li className="font-medium text-blue-700">10. Tái Định Nghĩa (Definition): <span className="text-gray-800">Biến các phản đối thành lợi thế hoặc làm cho chúng dễ chấp nhận hơn.</span></li>
                <li className="font-medium text-blue-700">9. Leo Thang Niềm Tin (Belief): <span className="text-gray-800">Xây dựng niềm tin từng bước để vượt qua các phản đối.</span></li>
                <li className="font-medium text-blue-700">12. Độc Quyền Giải Pháp (Concentration): <span className="text-gray-800">Loại bỏ các lựa chọn thay thế nếu khách hàng đang cân nhắc.</span></li>
            </>
           )}
           {selectedCongThuc.id === 'A_FOREST' && (
            <>
                <li className="font-medium text-blue-700">14. Đan xen (Interweaving): <span className="text-gray-800">Kết hợp lời hứa, lý lẽ, cảm xúc và hình ảnh vào từng câu văn.</span></li>
                <li className="font-medium text-blue-700">14. Xác minh (Verification): <span className="text-gray-800">Cung cấp bằng chứng (Facts, Examples, Statistics).</span></li>
                <li className="font-medium text-blue-700">14. Tâm trạng (Mood): <span className="text-gray-800">Sử dụng từ ngữ và nhịp điệu để tạo bầu không khí.</span></li>
            </>
           )}
        </ul>
      </div>
    </div>
  );
}

export default App;
